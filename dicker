#!/usr/bin/env python

from colorama import init

whale = [
'              ##          .     ',
'        ## ## ##         ==     ',
'     ## ## ## ## ##     ===     ',
' /"""""""""""""""""\___/ ===    ',
'{                       / ===-  ',
' \______ O           __/    ===-',
'   \    \         __/           ',
'    \____\_______/              ']

whale_color = [
'\033[0;36m             ##           \033[0;34m.               ',
'\033[0;36m       ## ## ##          \033[0;34m==               ',
'\033[0;36m    ## ## ## ## ##      \033[0;34m===               ',
'\033[0;34m /"""""""""""""""""\___/ ===                        ',
'\033[0;34m{                       / ===-                      ',
'\033[0;34m \______ \033[0;37mO           \033[0;34m__/    ===-',
'\033[0;37m   \    \033[0;34m\         __/                     ',
'\033[0;37m    \____\033[0;34m\_______/                        ']

def print_image(image):
    for string in image:
        print(string)


def main():
    init()
    print_image(whale)
    print_image(whale_color)

if __name__ == '__main__':
    main()
